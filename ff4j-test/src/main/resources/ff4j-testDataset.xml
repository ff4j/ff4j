		<property name="pDate"   	     type="date"           value="2018-12-24 23:00:00" 	/>
		<property name="pClass"      	 type="class" 	       value="java.lang.String" 	/>
		<property name="pDouble"    	 type="double"         value="20.0" 	  			/>
		<property name="pFloat"      	 type="float" 	   	   value="20.0" 	  			/>
		<property name="pInstant"    	 type="instant"        value="2018-12-24 23:00:00" 	/>
		<property name="pLocal"      	 type="localDateTime"  value="2018-12-24 23:00:00" 	/>
		<property name="pInt"        	 type="int" 	       value="10" 	  				/>
		<property name="pLogLevel"   	 type="logLevel" 	   value="INFO" 	  			/>
		<property name="pLong"       	 type="long" 	  	      value="123" 	  			    />
		<property name="pShort"      	 type="short" 	          value="5" 	  			    />
		<property name="pString"     	 type="string" 	          value="pString" 	  		    />
		<property name="pListBigDecimal" type="listBigDecimal" 	  value="1.5,2.5" 	  		    />
		<property name="pListBigInteger" type="listBigInteger"    value="123456,789012" 	  	/>
		<property name="pListBoolean"    type="listBoolean"       value="true,false" 	  		/>
		<property name="pListByte"       type="listByte" 	   	  value="p,l" 	  		        />
		<property name="pListCalendar"   type="listCalendar"   	  value="2018-12-24 23:00:00,2019-01-01 23:00:00" />
		<property name="pListDate"   	 type="listDate"          value="2018-12-24 23:00:00,2019-01-01 23:00:00" 	/>
