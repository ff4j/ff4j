<ff4j xmlns="http://www.ff4j.org/schema/ff4j" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ff4j.org/schema/ff4j-2.0.xsd">
	
	<!-- ~~~~~~~~~~~~~~~~~~~~ -->
	<!-- ~~ ROLES          ~~ -->
	<!-- ~~~~~~~~~~~~~~~~~~~~ -->

	<roles>
		<role name="EVERYONE">
			<permission>VIEW_FEATURES</permission>
			<permission>VIEW_PROPERTIES</permission>
		</role>
		<role name="USER">
			<permission>VIEW_FEATURES</permission>
			<permission>VIEW_PROPERTIES</permission>
			<permission>VIEW_AUDITTRAIL</permission>
			<permission>VIEW_FEATUREUSAGE</permission>
		</role>
		<role name="SUPERUSER">
			<permission>TOGGLE_FEATURES</permission>
			<permission>VIEW_FEATURES</permission>
			<permission>VIEW_PROPERTIES</permission>
			<permission>VIEW_AUDITTRAIL</permission>
			<permission>VIEW_FEATUREUSAGE</permission>
		</role>
		<role name="ADMINISTRATOR">
			<permission>ADMIN_FEATURES</permission>
			<permission>ADMIN_PROPERTIES</permission>
			<permission>TOGGLE_FEATURES</permission>
			<permission>VIEW_FEATURES</permission>
			<permission>VIEW_PROPERTIES</permission>
			<permission>VIEW_AUDITTRAIL</permission>
			<permission>VIEW_FEATUREUSAGE</permission>
		</role>
	</roles>

	<!-- ~~~~~~~~~~~~~~~~~~~~ -->
	<!-- ~~ USERS          ~~ -->
	<!-- ~~~~~~~~~~~~~~~~~~~~ -->

	<users>
		<user uid="john" firstName="John" lastName="Connor"
			description="sample description if OK">
			<roles>
				<role>ADMINISTRATOR</role>
			</roles>
			<permissions>
				<permission>ADMIN_FEATURES</permission>
			</permissions>
		</user>
		<user uid="sarah" firstName="Sarah" lastName="Connor"
			description="sample description if OK">
			<roles>
				<role>USER</role>
			</roles>
			<permissions>
				<permission>FEATURE_VIEW</permission>
			</permissions>
		</user>

	</users>

	<!-- ~~~~~~~~~~~~~~~~~~~~ -->
	<!-- ~~ FEATURES       ~~ -->
	<!-- ~~~~~~~~~~~~~~~~~~~~ -->

	<features>
	
	    <feature uid="f1" enable="false" description="some desc" />
	    
		<feature uid="f2" enable="true" description="description" groupName="GRP1">
			<permissions>
				<permission name="FEATURE_TOGGLE">
					 <users>
					 	<user>john</user>
					 </users>
				</permission>
				<permission name="FEATURE_VIEW">
				 	<roles>
						<role>EVERYONE</role>
					</roles>
				</permission>
			</permissions>
			<properties>
			  <property name="ppint" 	  type="int"     value="12"   		/>
			  <property name="ppdouble"   type="double"  value="12.5" 		/>
			  <property name="ppboolean"  type="boolean" value="true" 		/>
			  <property name="ppstring"   type="string"  value="hello"		/>
			  <property name="ppListInt"  type="listInt" value="12,13,14" 	/>
			  <property name="myLogLevel" type="logLevel" value="DEBUG" 		/>
			  <property name="digitValue" type="org.ff4j.property.PropertyInt" value="1" >
			  	<fixedValues>
			 		<value>0</value>
			 		<value>1</value>
			 		<value>2</value>
			 		<value>3</value>
			 	</fixedValues>
			  </property>
			  <property name="regionIdentifier" value="NA" >
			 	<fixedValues>
			 		<value>NA</value>
			 		<value>EMEA</value>
			 		<value>APAC</value>
			 	</fixedValues>
			 </property>
			</properties>
			<toggleStrategies>
			  <toggleStrategy class="org.ff4j.feature.togglestrategy.PonderationToggleStrategy">
			     <properties>
			  		<property name="weight" type="double" value="1" />
			     </properties>
			  </toggleStrategy>
			</toggleStrategies>
		</feature>
		
		<featureGroup name="GRP0">
			<feature uid="f3" enable="false" description="description" >
				<permissions>
				  <permission name="FEATURE_VIEW">
				 	<roles>
						<role>USER</role>
					</roles>
				  </permission>
			    </permissions>
			</feature>
		</featureGroup>
		
		<featureGroup name="GRP1">
			<feature uid="f4" enable="true" description="description" >
				 <toggleStrategies>
					<toggleStrategy class="org.ff4j.feature.togglestrategy.expression.ExpressionToggleStrategy">
						 <properties>
			  				<property name="expression" type="string" value="f3 | f2" />
			     		 </properties>
					</toggleStrategy>
				</toggleStrategies>
			</feature>
		</featureGroup>

	</features>

	<!-- ~~~~~~~~~~~~~~~~~~~~ -->
	<!-- ~~   PROPERTIES   ~~ -->
	<!-- ~~~~~~~~~~~~~~~~~~~~ -->

	<properties>
		<property name="pBigDecimal" 	 type="bigDecimal"     value="1.5" 	  				/>
		<property name="pBigInteger" 	 type="bigInteger"     value="123456" 				/>
