		<property name="plistInstant"    type="listInstant"       value="2018-12-24 23:00:00,2019-01-01 23:00:00" />
		<property name="pListInt"        type="listInt" 	      value="10,20" 	  		    				   />
		<property name="pListLogLevel"   type="listLogLevel"      value="INFO,DEBUG" 	  		                   />
		<property name="pListLong"       type="listLong" 	      value="123,456" 	  		                       />
		<property name="pListShort"      type="listShort" 	      value="5,6" 	  		    					   />
		<property name="pListString"     type="listString" 	      value="pString,listString" 	  		    	   />
		<property name="pListLocal"      type="listLocalDateTime" value="2018-12-24 23:00:00,2019-01-01 23:00:00" />
	</properties>

</ff4j>
